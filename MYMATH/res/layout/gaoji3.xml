<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   
    tools:context=".MainActivity"
    android:background="@drawable/pu3" >

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="22dp"
        android:text="交卷" />

    <TextView
        android:id="@+id/TextView05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button1"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/button1"
        android:layout_toRightOf="@+id/button1"
        android:text="分数："
        android:textSize="38dip"
        android:textColor="#000000"  />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="100dip"
        android:layout_height="30dip"
        android:layout_alignLeft="@+id/TextView05"
        android:layout_alignTop="@+id/textView1"
        android:layout_marginLeft="30dp"
        android:textSize="13sp"
        android:ems="10" 
        android:background="@drawable/rounded_edittext"/>

    <EditText
        android:id="@+id/editText2"
        android:layout_width="100dip"
        android:layout_height="30dip"
        android:layout_alignLeft="@+id/editText1"
        android:layout_alignTop="@+id/textView2"
         android:textSize="13sp"
        android:ems="10" 
        android:background="@drawable/rounded_edittext"/>

    <EditText
        android:id="@+id/editText4"
        android:layout_width="100dip"
        android:layout_height="30dip"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignLeft="@+id/editText3"
         android:textSize="13sp"
        android:ems="10" 
        android:background="@drawable/rounded_edittext"/>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="21dp"
        android:text="504÷56="
        android:textColor="#000000"  />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="100dip"
        android:layout_height="30dip"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignLeft="@+id/editText2"
         android:textSize="13sp"
        android:ems="10" 
        android:background="@drawable/rounded_edittext"/>

    <EditText
        android:id="@+id/editText5"
        android:layout_width="100dip"
        android:layout_height="30dip"
        android:layout_above="@+id/button1"
        android:layout_alignLeft="@+id/editText4"
        android:layout_marginBottom="22dp"
         android:textSize="13sp"
        android:ems="10" 
        android:background="@drawable/rounded_edittext"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editText5"
        android:layout_alignLeft="@+id/textView4"
        android:text="72÷(8×3)="
        android:textColor="#000000"  />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText5"
        android:layout_alignLeft="@+id/textView3"
        android:layout_marginBottom="38dp"
        android:text="45÷(12-9)="
        android:textColor="#000000"  />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText4"
        android:layout_alignLeft="@+id/textView2"
        android:layout_marginBottom="36dp"
        android:text="32×2.5="
        android:textColor="#000000"  />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/editText1"
        android:layout_marginTop="36dp"
        android:text="2.5×0.4="
        android:textColor="#000000"  />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/TextView05"
        android:layout_alignParentRight="true"
        android:text="答案" />

</RelativeLayout>