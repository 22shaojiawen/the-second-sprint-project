<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
    tools:context=".MainActivity" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="减法是四则运算之一，从一个数量中减去另一个数量的运算叫做减法;已知两个加数的和与其中一个加数，求另一个加数的运算叫做减法。表示减法的符号是'-'，读作减号" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="112dp"
        android:text="减法口诀表部分:
1-1=0
2-1=1   2-2=0
3-1=2   3-2=1   3-3=0
4-1=3   4-2=2   4-3=1   4-4=0
5-1=4   5-2=3   5-3=2   5-4=1   5-5=0
6-1=5   6-2=4   6-3=3   6-4=2   6-5=1   6-6=0
7-1=6   7-2=5   7-3=4   7-4=3   7-5=2   7-6=1   
" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:text="减法简便运算可以根据变换位置达到简化
    如: 题例(简算过程):
 17+18-7 =(17-7)+18 =10+18 =28
 题例(简算过程):
 112-76-12=112-12-76 =100-76 =24
 题例(简算过程):
 13+12-3-2 =(13-3)+(12-2) =10+10=20
" />
  
</RelativeLayout>